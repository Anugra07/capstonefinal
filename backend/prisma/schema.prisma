// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Embedding {
  id        String   @id @default(uuid())
  content   String
  vector    Unsupported("vector(768)")
  type      String   // "CHAT", "JOURNAL", "DOC"
  sourceId  String
  spaceId   String
  createdAt DateTime @default(now())
  
  space     Space    @relation(fields: [spaceId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  spaces    SpaceMember[]
  messages  Message[]
  journalEntries JournalEntry[]
  tasks     Task[]
  joinRequests SpaceJoinRequest[]
  notifications Notification[]
}

model Space {
  id          String   @id @default(uuid())
  name        String
  description String?
  problemStatement String?
  inviteToken String   @unique @default(uuid())
  isPublic    Boolean  @default(true) // Whether space is visible in public listings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     SpaceMember[]
  journalEntries JournalEntry[]
  tasks       Task[]
  messages    Message[]
  documents   Document[]
  embeddings  Embedding[]
  joinRequests SpaceJoinRequest[]
}

model SpaceMember {
  id        String   @id @default(uuid())
  userId    String
  spaceId   String
  role      String   @default("MEMBER") // OWNER, ADMIN, MEMBER
  joinedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  space     Space    @relation(fields: [spaceId], references: [id])

  @@unique([userId, spaceId])
}

model JournalEntry {
  id        String   @id @default(uuid())
  spaceId   String
  userId    String
  title     String
  content   String   @db.Text
  sentiment String?
  createdAt DateTime @default(now())

  space     Space    @relation(fields: [spaceId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Task {
  id          String   @id @default(uuid())
  spaceId     String
  userId      String?  // Assigned to
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  category    String?  // Idea Validation, Prototype, etc.
  isAiGenerated Boolean @default(false)
  createdAt   DateTime @default(now())

  space       Space    @relation(fields: [spaceId], references: [id])
  user        User?    @relation(fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  spaceId   String
  userId    String
  content   String
  createdAt DateTime @default(now())

  space     Space    @relation(fields: [spaceId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Document {
  id        String   @id @default(uuid())
  spaceId   String
  title     String
  url       String?
  summary   String?  @db.Text
  createdAt DateTime @default(now())

  space     Space    @relation(fields: [spaceId], references: [id])
}

model SpaceJoinRequest {
  id        String   @id @default(uuid())
  userId    String
  spaceId   String
  reason    String?  @db.Text // Why they want to join
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reviewedBy String? // User ID who reviewed the request
  reviewedAt DateTime?

  user      User     @relation(fields: [userId], references: [id])
  space     Space    @relation(fields: [spaceId], references: [id])

  @@unique([userId, spaceId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String   // "JOIN_REQUEST_APPROVED", "JOIN_REQUEST_REJECTED", "JOIN_REQUEST_RECEIVED"
  title     String
  message   String   @db.Text
  spaceId   String?
  requestId String?  // SpaceJoinRequest ID if related
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
